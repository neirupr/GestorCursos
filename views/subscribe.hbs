{{>header}}
{{>messages}}

<div class="py-5">
	<form class="col" method="post" action="/subscribe">
		<div class="d-none">
			<input type="number" name="id" value={{user.id}} required>
		</div>
		<div class="form-group col-12 col-md-6 ml-auto mr-auto">
			<label for="course">Cursos disponibles*</label>
			<select class="form-control" name="course">
				{{#each courses}}
					{{#if available}}
						<option value="{{id}}">{{name}}</option>
					{{/if}}
				{{/each}}
			</select>
		</div>
		<button type="submit" class="btn btn-primary col-4 ml-auto mr-auto d-flex justify-content-center">Matricularse</button>
	</form>
</div>

{{>footer}}