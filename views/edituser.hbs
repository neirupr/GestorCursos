{{>header}}
{{>messages}}

<form class="row" method="post" action="/updateUser">
	<div class="form-group col-12 col-md-6">
		<label for="name">Nombre*</label>
		<input type="text" class="form-control" id="name" name="name" placeholder="Nombre"  value="{{editUserData.name}}" required>
	</div>
	<div class="form-group col-12 col-md-6">
		<label for="id">Identificación*</label>
		<input type="number" class="form-control" placeholder="Identificación"  value="{{editUserData.id}}" required disabled>
		<input type="hidden"  id="id" name="id" value="{{editUserData.id}}">
	</div>
	<div class="form-group col-12 col-md-6">
		<label for="email">Correo electrónico*</label>
		<input type="email" class="form-control"  autocomplete="off" id="email" name="email" placeholder="Correo electrónico" value="{{editUserData.email}}" required>
	</div>
	<div class="form-group col-12 col-md-6">
		<label for="password">Contraseña*</label>
		<input type="password" class="form-control"  autocomplete="off" id="password" name="password" placeholder="Contraseña" value="{{editUserData.password}}" required>
	</div>
	<div class="form-group col-12 col-md-6">
		<label for="phone">Teléfono*</label>
		<input type="number" class="form-control" id="phone" name="phone" placeholder="Teléfono" value="{{editUserData.phone}}" required>
	</div>
    	<div class="form-group col-12 col-md-6">
		<label for="phone">Rol</label>
		<select name="rol" id="rol"  class="form-control">

            <option value="student">Estudiante</option>
            <option value="teacher">Profesor</option>
        </select>
	</div>
	<div class="col-12 d-flex justify-content-center">
		<small class="form-text text-muted">Los campos con * son obligatorios</small>
	</div>
	<button type="submit" class="btn btn-primary col-4 ml-auto mr-auto d-flex justify-content-center mt-10">Actualizar</button>
</form>


{{>footer}}